<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="8dp">

    <ImageButton
        android:id="@+id/delete_item"
        style="@android:style/Widget.ImageButton"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="8dp"
        android:onClick="deleteItem"
        app:srcCompat="@android:drawable/ic_menu_delete" />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/delete_item"
        android:text="product name"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/batch_number"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/product_name"
        android:text="batch number"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/product_price"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/batch_number"
        android:text="product price"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/product_quantity"
        android:layout_height="wrap_content"
        android:layout_width="80dp"
        android:layout_toRightOf="@id/product_price"
        android:text="quantity"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <TextView
        android:id="@+id/product_cost"
        android:layout_height="wrap_content"
        android:layout_width="60dp"
        android:layout_toRightOf="@id/product_quantity"
        android:text="cost"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

    <Button
        android:id="@+id/delivery_date_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@id/product_cost"
        android:text="Delivery Date" />

</RelativeLayout>