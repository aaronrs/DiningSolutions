<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp">

    <Button
        android:id="@+id/add_product_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="addProduct"
        android:text="Add Product" />

    <TextView
        android:id="@+id/text_delete"
        android:layout_width="48dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_product_btn"
        android:text="Delete" />

    <TextView
        android:id="@+id/text1"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_delete"
        android:layout_toRightOf="@+id/text_delete"
        android:text="Produce Purchased"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text2"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_delete"
        android:layout_toRightOf="@id/text1"
        android:text="Batch No."
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text3"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_delete"
        android:layout_toRightOf="@id/text2"
        android:text="Price"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text4"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_delete"
        android:layout_toRightOf="@id/text3"
        android:text="Quantity"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text5"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_delete"
        android:layout_toRightOf="@id/text4"
        android:text="Cost"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text6"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_delete"
        android:layout_toRightOf="@id/text5"
        android:layout_marginLeft="16dp"
        android:text="Delivery Date"
        android:textSize="14sp" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/text_delete">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.RecyclerView xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/order_items_list"
                android:name="net.astechdesign.diningsolutions.OrderDetailFragment"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="16dp"
                app:layoutManager="LinearLayoutManager"
                tools:context="net.astechdesign.diningsolutions.customers.OrderDetailFragment"
                tools:listitem="@layout/order_item_list_content" />

            <TextView
                android:id="@+id/text_total"
                style="?android:attr/textAppearanceMedium"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_items_list"
                android:layout_marginBottom="24dp"
                android:text="Total"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/order_detail_total"
                style="?android:attr/textAppearanceMedium"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/order_items_list"
                android:layout_toRightOf="@id/text_total"
                android:textSize="16sp" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>