<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="16dp"
    >

    <TextView
        android:id="@+id/text1"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Produce Purchased"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/text2"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text1"
        android:textSize="14sp"
        android:text="Batch No." />

    <TextView
        android:id="@+id/text3"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text2"
        android:textSize="14sp"
        android:text="Price" />

    <TextView
        android:id="@+id/text4"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text3"
        android:textSize="14sp"
        android:text="Quantity" />

    <TextView
        android:id="@+id/text5"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text4"
        android:textSize="14sp"
        android:text="Cost" />

    <TextView
        android:id="@+id/text6"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/text5"
        android:layout_marginLeft="16dp"
        android:textSize="14sp"
        android:text="Delivery Date" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/text1"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/order_items_list"
        android:name="net.astechdesign.diningsolutions.OrderDetailFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        app:layoutManager="LinearLayoutManager"
        tools:context="net.astechdesign.diningsolutions.customers.OrderDetailFragment"
        tools:listitem="@layout/order_item_list_content" />

    <TextView
        android:id="@+id/text_total"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_items_list"
        android:layout_marginBottom="24dp"
        android:textSize="16sp"
        android:text="Total" />

    <TextView
        android:id="@+id/order_detail_total"
        style="?android:attr/textAppearanceMedium"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/order_items_list"
        android:layout_toRightOf="@id/text_total"
        android:textSize="16sp" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>