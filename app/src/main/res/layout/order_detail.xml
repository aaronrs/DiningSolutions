<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:text="Add Product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/add_product_btn"
        android:onClick="addProduct" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            style="?android:attr/textAppearanceMedium"
            android:layout_height="wrap_content"
            android:text="Produce Purchased"
            android:layout_width="500dp" />

        <TextView
            style="?android:attr/textAppearanceMedium"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Batch No." />

        <TextView
            style="?android:attr/textAppearanceMedium"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Price" />

        <TextView
            style="?android:attr/textAppearanceMedium"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="Quantity" />

        <TextView
            style="?android:attr/textAppearanceMedium"
            android:layout_height="wrap_content"
            android:text="Cost"
            android:gravity="right"
            android:layout_width="100dp" />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/order_items_list"
        android:name="net.astechdesign.diningsolutions.OrderDetailFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        app:layoutManager="LinearLayoutManager"
        tools:context="net.astechdesign.diningsolutions.customers.OrderDetailFragment"
        tools:listitem="@layout/order_item_list_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:layout_margin="16dp">

        <TextView
            android:layout_width="740dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            style="?android:attr/textAppearanceMedium"
            android:layout_height="wrap_content"
            android:text="Total"
            android:layout_width="100dp" />

        <TextView
            android:id="@+id/order_detail_total"
            style="?android:attr/textAppearanceMedium"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="right" />

    </LinearLayout>
</LinearLayout>